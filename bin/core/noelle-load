#!/bin/bash -e

trap 'echo "error: $(basename $0): line $LINENO"; exit 1' ERR

opt \
  $(noelle-config --svf-libs) \
  $(noelle-config --scaf-libs) \
  $(noelle-config --noelle-libs) \
  $(noelle-config --llvm-analyses) \
  $(noelle-config --svf-analyses) \
  $(noelle-config --scaf-analyses) \
  $(noelle-config --noelle-analyses) \
  $(noelle-config --other-analyses) \
  $@
